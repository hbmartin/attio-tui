{
  "name": "@hbmartin/attio-tui",
  "version": "1.1.0",
  "license": "MIT",
  "keywords": [
    "attio",
    "crm",
    "typescript",
    "zod",
    "tui",
    "api-client",
    "contacts",
    "sales"
  ],
  "bin": {
    "attio": "dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --watch",
    "lint": "biome check --error-on-warnings",
    "lint:report": "biome check . --reporter=json | jq -r '  .diagnostics[]  | .category' | sort | uniq -c | sort -nr",
    "format": "biome check --write",
    "test": "vitest run --coverage",
    "dupes": "jscpd",
    "prepare": "husky"
  },
  "author": "Harold Martin <harold.martin@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hbmartin/attio-tui.git"
  },
  "bugs": {
    "url": "https://github.com/hbmartin/attio-tui/issues"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "attio-ts-sdk": "^2.0.2",
    "fullscreen-ink": "^0.1.0",
    "ink": "^6.7.0",
    "meow": "^14.0.0",
    "react": "^19.2.4",
    "string-width": "^8.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@sindresorhus/tsconfig": "^8.1.0",
    "@types/node": "^24.10.13",
    "@types/react": "^19.2.14",
    "@vitest/coverage-istanbul": "^4.0.18",
    "ava": "^6.4.1",
    "chalk": "^5.6.2",
    "eslint-config-xo-react": "^0.29.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "ink-testing-library": "^4.0.0",
    "jscpd": "^4.0.8",
    "node-pty": "^1.1.0",
    "publint": "^0.3.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "xo": "^1.2.3"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off"
    }
  },
  "resolutions": {
    "@types/node": "^24"
  },
  "jscpd": {
    "threshold": 0,
    "reporters": [
      "markdown",
      "console"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/test/**",
      "**/src/generated/**",
      "**/*.json",
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "absolute": false
  }
}
