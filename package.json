{
  "name": "attio-tui",
  "version": "0.0.0",
  "license": "MIT",
  "keywords": [
    "attio",
    "crm",
    "typescript",
    "zod",
    "tui",
    "api-client",
    "contacts",
    "sales"
  ],
  "bin": "dist/cli.js",
  "type": "module",
  "engines": {
    "node": ">=24"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "biome check --error-on-warnings",
    "lint:report": "biome check . --reporter=json | jq -r '  .diagnostics[]  | .category' | sort | uniq -c | sort -nr",
    "format": "biome check --write",
    "test": "vitest run --coverage",
    "dupes": "jscpd",
    "prepare": "husky"
  },
  "author": "Harold Martin <harold.martin@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hbmartin/attio-tui.git"
  },
  "bugs": {
    "url": "https://github.com/hbmartin/attio-tui/issues"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "attio-ts-sdk": "^1.0.0",
    "ink": "^4.1.0",
    "meow": "^11.0.0",
    "react": "^18.2.0",
    "zod": "^4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@sindresorhus/tsconfig": "^3.0.1",
    "@types/node": "^24.10.9",
    "@types/react": "^18.0.32",
    "@vitest/coverage-istanbul": "^4.0.17",
    "ava": "^5.2.0",
    "chalk": "^5.2.0",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "ink-testing-library": "^3.0.0",
    "jscpd": "^4.0.7",
    "node-pty": "^1.1.0",
    "publint": "^0.3.17",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3",
    "vitest": "^4.0.17",
    "xo": "^0.53.1"
  },
  "ava": {
    "extensions": {
      "ts": "module",
      "tsx": "module"
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "xo": {
    "extends": "xo-react",
    "prettier": true,
    "rules": {
      "react/prop-types": "off"
    }
  },
  "resolutions": {
    "@types/node": "^24"
  },
  "jscpd": {
    "threshold": 0,
    "reporters": [
      "markdown",
      "console"
    ],
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "**/coverage/**",
      "**/test/**",
      "**/src/generated/**",
      "**/*.json",
      "**/*.test.ts",
      "**/*.test.tsx"
    ],
    "absolute": false
  }
}
